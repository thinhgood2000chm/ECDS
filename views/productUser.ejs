<div class="col-md-9">
     <!-- <div class="card-deck">-->
       <div class="row">
        <% product.forEach(p=>{%>
        <div class="col-md-4">
        <div class="card">
          <img class="card-img-top" src="<%=p.image%>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%=p.name%></h5>
            <%if(p.discount!=null && p.checkDiscount==='true'){%>
              <p class="card-text">giá tiền:<strike><%=p.price%></strike>  <%=p.price-p.price*p.discount/100%></p>  
              <p class="card-text"></p>
               <%}else{%>
                <p class="card-text">giá tiền:<%=p.price%></p>
                <%}%>
          </div>
          <a href="detail/<%=p._id%>" class="btn btn-primary">Chi tiết</a>
        </div>
      </div>
      <%})%>

    
     </div>
    </div>

    
