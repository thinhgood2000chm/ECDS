		/*====Top nav===================================================*/
			.top-nav{
				background: black;
				padding: 4px;
			}
			.top-nav a{padding-right:10px}
			.top-nav a:hover{color:#FFF}

		/*====Header=====================================================*/
			.header{
				background: lightblue;
				height:120px;
				padding: 6px;
			}
			.ads {
				height:108px;
				background: #eee;
				text-align: center;
			}
			/*hide ads cho thiết bị dưới 992px*/
			@media (max-width: 991px) {
			.ads {display: none}
			}

			/*====Mid nav===================================================*/
			.mid-nav{
				background: black;
				text-transform: uppercase;
				height:40px; overflow: hidden;
			}
			.mid-nav a{
				color:#E2E2E2;
				padding: 12px 12px 12px 6px;
				display: block; float:left;
			}
			.mid-nav a:hover{
				background: #0572AE;
				text-decoration: none;
			}
			.mid-nav .icon { display: none; }
			/*Mid nav responsive cho màn hình dưới 600px*/
			@media screen and (max-width: 600px) {
			.mid-nav{height:auto}
			.mid-nav a:not(:first-child) {display: none;}
			.mid-nav a.icon {
				float: right;
				display: block;
				}
			}
			@media screen and (max-width: 600px) {
			.mid-nav.responsive {position: relative;}
			.mid-nav.responsive a.icon {
				position: absolute;
				right: 0;
				top: 0;
			}
			.mid-nav.responsive a {
				float: none;
				display: block;
				text-align: left;
				}
			}

		</style>


