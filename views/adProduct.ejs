<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Thêm sản phẩm</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <style>
    </style>
</head>
<body>
    <style>
        table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        }
        th, td {
        padding: 5px;
        text-align: left;    
}
    </style>
<!-- enctype="multipart/form-data-->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-5 col-lg-6 col-md-8 border mt-3 pt-3 rounded mx-3">
            <div class="form-group text-small">
                <small><a href="/">Quay lại</a></small>
            </div>
            <h4 class="text-success">Thêm sản phẩm mới</h4>
            <form class="mt-3" method="POST"  action="/addProduct" id ="formSubmit">
                <div class="form-group">
                    <label for="user">Tên sản phẩm</label>
                    <input class="form-control" type="text" placeholder="Nhập tên sản phẩm" id="name" name="name" value="<%=locals.name%>">
                </div>
                <div class="form-group">
                    <label for="pass2">Giá sản phẩm</label>
                  
                    <input class="form-control" type="number" placeholder="Nhập giá bán" id="price" name="price" value="<%=locals.price%>">
                </div>
                <div class="form-group">
                    <label for="pass2">Ảnh sản phẩm</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="customFile" name="image">
                        <label class="custom-file-label text-truncate" for="customFile">Chọn file</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass2">Mô tả</label>
                    <textarea class="form-control" rows="4" name="desc" value="<%=locals.desc%>"></textarea>
                </div>

                
                <div class="form-group" id = "color">
                    <label for="chooseColor">chọn màu</label>
                    <input class="form-control" type="text" placeholder="Nhập màu sắc vd: đỏ"  name="color" value="">
                   
                </div>
                <button class="btn btn-info" id="addInput">thêm</button>
               
                <br>
                <br>

                <div class="form-group" id = "size">
                    <label for="chooseSize">chọn size</label>
                    <input class="form-control" type="text" placeholder="Nhập kích cỡ vd: S"  name="size" value="">
                   
                </div>
                <button class="btn btn-info" id="addInputSize">thêm</button>
                

                <table  style="width:100%" >
                    <thead>
                        <tr>
                            <th></th>
                          <th>màu sắc </th>
                          <th>kích cỡ</th>
                          <th>số lượng </th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                            <td><i id="delete" class="fa fa-trash-o" style="font-size:24px"></i></td>
                          <td rowspan="3">đỏ</td>
                          <td>M</td>
                          <td>400000</td>
                          <td><input type="checkbox" name="checkbox" id="checkbox"></td>
                        </tr>
                        <tr>
                            <td> <i id="delete" class="fa fa-trash-o" style="font-size:24px"></i></td>

                           
                        
                            <td>L</td>
                            <td>400000</td>
                            <td><input type="checkbox" name="checkbox" id="checkbox"></td>
                          </tr>
                
                        </tbody>
                </table>


                    <div class="alert alert-danger">
                 
                    </div>
                
                <div class="form-group">
                    <button id="btnadd" class="btn btn-success mr-2">Thêm sản phẩm</button>
                </div>
                   
            </form>
        </div>
    </div> 
    
    
</div>
<script>
    // Add the following code if you want the name of the file appear on select
   /* $(".custom-file-input").on("change", function() {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });*/
   
    var count = 0 
    $("#addInput").click(()=>{
        $("#formSubmit").submit(()=>{
            return false;
            
        })
       // console.log(input);
        var IdColorInput= document.getElementById("color")
        var input = document.createElement("INPUT")
        input.setAttribute('name','color'+count)
        input.setAttribute('class','form-control')
        input.setAttribute('type','text')
        input.setAttribute('placeholder','Nhập màu sắc vd: đỏ')

        IdColorInput.appendChild(input);
        count = count +1
        console.log(count);
    })
    var countSizeInput = 0 

    $("#addInputSize").click(()=>{
        
        // console.log(input);
         var addInputSize= document.getElementById("size")
         var input = document.createElement("INPUT")
         input.setAttribute('name','size'+countSizeInput)
         input.setAttribute('class','form-control')
         input.setAttribute('type','text')
         input.setAttribute('placeholder','Nhập kích cỡ vd: S ')
 
         addInputSize.appendChild(input);
         countSizeInput = countSizeInput +1
   
         console.log(countSizeInput);
     })
     var text=0
     $("#btnadd").click(()=>{
        $("#formSubmit").submit(()=>{
            return true;
            
        })
        text = text+1
        console.log(text);
    })
</script>
</body>
</html>



