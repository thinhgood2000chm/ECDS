<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>cart</title>
</head>
<body>
    <form action="/payment" method="post"> 
    <div class="container">
    <table class="table  table-hover" >
        <thead>
            <tr>
                <th></th>
              <th>hình ảnh </th>
              <th>tên sản phẩm</th>
              <th>số lượng </th>
              <th>màu sắc</th>
              <th>giá</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
              <%ucah.forEach(data=>{%>
                <input type="hidden" id= "id" name="id"value="><%=data._id%>">
            <tr>
                <td><i id="delete" class="fa fa-trash-o" style="font-size:24px"></i></td>
              <td><img src="<%=data.image%>" alt="" width="100px" height="100px"></td>
              <td><%=data.name%> </td>
              <td><%=data.amount%></td>
              <td><%=data.color%></td>
              <td><%=data.price%></td>
              <td><input type="checkbox" name="checkbox" id="checkbox"></td>
              <td><input type="hidden" value="" id="checkBoxchecked" name = checkBoxchecked></td>
            </tr>
            <%})%>
    
            </tbody>
    </table>
    <div class="row">
        <div class="col">
            <input type="text" placeholder="nhập mã ưu đãi"> <button id="btnApply" class="btn btn-light">ÁP DỤNG</button>
        </div>  
        <div class="col"></div>
      
        <div class="col"><button class="btn btn-success">THANH TOÁN</button></div>
    </div>
</div>
</form>
<%if(user){%>
    <p><%=user.name%></p>
    <a href="/logout">logout</a>
    <p> đây là trang admin</p>
    <%}%>

<script>

$("#btnApply").mouseover(()=>{
    $("#btnApply").css({"background-color":"white","border-color":"black","color":"black"})

})
$("#btnApply").mouseout(()=>{
    $("#btnApply").css({"background-color":"#1a1a1a","border-color":"black","color":"white"})
})
$("#checkbox").click(()=>{
    if($("#checkbox").prop("checked") == true){
        console.log("đã vào đây");
        //$("#checkBoxchecked").html("true")
        document.getElementById("checkBoxchecked").value="true"
    }
    else   $("#checkBoxchecked").html("false")
})



</script>
</body>
</html>